<p id="notice"><%= notice %></p>

<h1>Job Alerts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_alerts.each do |job_alert| %>
      <tr>
        <td><%= job_alert.name %></td>
        <td><%= job_alert.email %></td>
        <td><%= job_alert.phone %></td>
        <td><%= link_to 'Show', job_alert %></td>
        <td><%= link_to 'Edit', edit_job_alert_path(job_alert) %></td>
        <td><%= link_to 'Destroy', job_alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Alert', new_job_alert_path %>
