<%= form_for(company) do |f| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :industry %>
    <%= f.text_field :industry %>
  </div>

  <div class="field">
    <%= f.label :nssf %>
    <%= f.text_field :nssf %>
  </div>

  <div class="field">
    <%= f.label :nhif %>
    <%= f.text_field :nhif %>
  </div>

  <div class="field">
    <%= f.label :kra_pin %>
    <%= f.text_field :kra_pin %>
  </div>

  <h2 class="count">Branches <span><%= @company.branches.count %></h2>
  <div id="branches">
    <%= f.fields_for :branches do |branch| %>
      <%= render 'branch_fields', f: branch %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add Branch', f, :branches %>
    </div>

  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
