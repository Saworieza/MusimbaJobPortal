<p id="notice"><%= notice %></p>

<h1>Contacs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Subject</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacs.each do |contac| %>
      <tr>
        <td><%= contac.name %></td>
        <td><%= contac.email %></td>
        <td><%= contac.subject %></td>
        <td><%= contac.message %></td>
        <td><%= link_to 'Show', contac %></td>
        <td><%= link_to 'Edit', edit_contac_path(contac) %></td>
        <td><%= link_to 'Destroy', contac, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

