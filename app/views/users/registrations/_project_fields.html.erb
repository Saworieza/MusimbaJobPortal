<div class="nested-fields">
  <div class="col-md-12" style="margin-top:20px">
    <div class="col-md-3">
      <div class="form-group">
        <label class="control-label">Project Name</label> 
          <span class= "input-icon">
            <%= f.text_field :name, class: "form-control" %>
            <i class="fa fa-cogs"></i>
          </span>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-group">
        <label class="control-label">Client</label> 
          <span class="input-icon">
            <%= f.text_field :client, class: "form-control" %>
            <i class="fa fa-user"></i>
          </span>
      </div>
    </div>
  
    <div class="col-md-3">
      <div class="form-group">
        <label class="control-label">Date Completed</label> 
          <span class="input-icon"></span>
            <div class="input-group">
              <span class="input-icon">
                <div class="input-group">
                  <%= f.text_field :date_completed, data:{ provide: "datepicker", behaviour: 'datepicker', date_format: "dd-mm-yyyy", date_viewmode: "years"}, class: "date-picker form-control" %>
                  <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                </div>
              </span>
            </div>
      </div>
    </div>
     
    <div class="col-md-3">
      <div class="form-group">
        <label class="control-label">Contributions(%)</label> 
          <span class= "input-icon"> 
            <%= f.text_field :contribution, class: "form-control" %>
            <i class="fa fa-pie-chart"></i>
          </span>
      </div>
    </div>
    
    <!-- add this field to schema -->
    <div class="col-md-12" style="margin-top:20px">
      <textarea class="form-control" data-msg-required="Please enter your message." id="message" maxlength="5000" name="message" placeholder="Brief description about the project" rows="6"></textarea>
    </div>
    
    <div class="col-md-4 pull-right" style="margin-top:20px;">
      <%= link_to_remove_association "Remove Project", f, class: "btn btn-teal btn-md pull-right" %>
    </div>
  </div>  
</div>


<script>
  $(document).on("page:load ready", function(){
    $("input.datepicker").datepicker();
  });
</script>