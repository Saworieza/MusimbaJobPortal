<p id="notice"><%= notice %></p>

<h1>Branches</h1>

<table>
  <thead>
    <tr>
      <th>Branch name</th>
      <th>Contact person</th>
      <th>Role</th>
      <th>Box number</th>
      <th>Size</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Building</th>
      <th>Street</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.branch_name %></td>
        <td><%= branch.contact_person %></td>
        <td><%= branch.role %></td>
        <td><%= branch.box_number %></td>
        <td><%= branch.size %></td>
        <td><%= branch.phone %></td>
        <td><%= branch.email %></td>
        <td><%= branch.building %></td>
        <td><%= branch.street %></td>
        <td><%= branch.company %></td>
        <td><%= link_to 'Show', branch %></td>
        <td><%= link_to 'Edit', edit_branch_path(branch) %></td>
        <td><%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

